    <!-- https://confluence.atlassian.com/bamboocloud/constructing-a-cron-expression-in-bamboo-737183956.html -->
    <!-- end of import from the product container -->

    <!-- additional components for administration -->
    <component key="team-service" name="Team Service" class="org.catrobat.jira.timesheet.services.impl.TeamServiceImpl"/>
    <component key="timesheet-service" name="Timesheet Service" class="org.catrobat.jira.timesheet.services.impl.TimesheetServiceImpl"/>
    <component key="timesheetentry-service" name="Timesheet Entry Service" class="org.catrobat.jira.timesheet.services.impl.TimesheetEntryServiceImpl"/>
    <component key="category-service" name="Category Service" class="org.catrobat.jira.timesheet.services.impl.CategoryServiceImpl"/>
    <component key="permission-service" name="Permission Service" class="org.catrobat.jira.timesheet.services.impl.PermissionServiceImpl"/>
    <component key="dbfiller-service" name="DBFiller Service" class="org.catrobat.jira.timesheet.services.impl.DBFillerServiceImpl"/>
    <!-- end of timesheet-components -->

    <!-- administration-components -->
    <component key="configuration" name="Config Service" class="org.catrobat.jira.timesheet.activeobjects.impl.ConfigServiceImpl"/>
    <!-- end of administration-components -->

    <ao key="ao-module">
        <description>The module configuring the Active Objects service used by this plugin</description>
        <!-- timesheet -->
        <entity>org.catrobat.jira.timesheet.activeobjects.TimesheetEntry</entity>
        <entity>org.catrobat.jira.timesheet.activeobjects.Timesheet</entity>
        <entity>org.catrobat.jira.timesheet.activeobjects.Team</entity>
        <entity>org.catrobat.jira.timesheet.activeobjects.TeamToGroup</entity>
        <entity>org.catrobat.jira.timesheet.activeobjects.Category</entity>
        <entity>org.catrobat.jira.timesheet.activeobjects.CategoryToTeam</entity>

        <!-- administration -->
        <entity>org.catrobat.jira.timesheet.activeobjects.Config</entity>
        <entity>org.catrobat.jira.timesheet.activeobjects.Group</entity>
        <entity>org.catrobat.jira.timesheet.activeobjects.ApprovedUser</entity>
        <entity>org.catrobat.jira.timesheet.activeobjects.ApprovedGroup</entity>
    </ao>

    <!-- rest-resources -->
    <rest key="timesheetRest" path="/timesheet" version="1.0">
        <description>Provides timesheet services.</description>
    </rest>
    <!-- end of rest-resources -->

    <!-- web-items -->
    <!-- user timesheet -->
    <web-item key="timesheet_view" name="Link to Timsheet View" section="system.top.navigation.bar" weight="30">
        <label>Timesheet</label>
        <link linkId="timesheet_view_link">/plugins/servlet/timesheet</link>
    </web-item>

    <!-- single user visualization -->
    <web-item key="visualization_view" name="Link to Visualization View" section="system.top.navigation.bar" weight="40">
        <label>Visualization</label>
        <link linkId="visualization_view_link">/plugins/servlet/timesheet/visualization</link>
    </web-item>

    <!-- administration -->
    <web-item key="administration_view" name="Link to Administration View" section="system.top.navigation.bar" weight="1">
        <description>Link to Administration menu</description>
        <label>Configuration</label>
        <link linkId="administration_view_link">/plugins/servlet/timesheet/administration</link>
    </web-item>

    <web-item key="user_information" name="Link to User Information View" section="system.top.navigation.bar" weight="3">
        <label>User Information</label>
        <link linkId="user_information_view_link">/plugins/servlet/timesheet/user/information</link>
    </web-item>
    <!-- end of web-items -->

</atlassian-plugin>