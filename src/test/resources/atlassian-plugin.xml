<atlassian-plugin key="${team.groupId}.${team.artifactId}-tests" name="${team.name}" plugins-version="2">
    <plugin-info>
        <description>${team.description}</description>
        <version>${team.version}</version>
        <vendor name="${team.organization.name}" url="${team.organization.url}" />
    </plugin-info>

    <!-- from our base plugin -->
    <component-import key="myComponent" interface="org.catrobat.confluence.timesheet.MyPluginComponent"/>

    <!-- from the product container -->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
    
</atlassian-plugin>