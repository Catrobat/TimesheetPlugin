{namespace Confluence.Templates.Visualization}

/**
 * @param teams
 */
{template .visualizationHeader}
  <div class="tr">
    <span class="th date">Datum</span>
    <span class="th range">Dauer</span>
    <span class="th pause"></span>
    <span class="th duration"></span>
    {if length(keys($teams)) > 1}
      <span class="th team"></span>
    {/if}
    <span class="th category"></span>
    <span class="th"></span>
    <span class="th"></span>
  </div>
{/template}

/**
 * Renders a table of selected AJS.params
 * @param entry
 * @param teams
 */
{template .visualizationEntry}
   <div class="tr entry-view" data-id="{$entry.entryID}">
    <span class="td date">{$entry.date}</span>
    <span class="td range">{$entry.begin}</span>
    <span class="td pause"></span>
    <span class="td duration"></span>
    {if length(keys($teams)) > 1}
      <span class="td"></span>
    {/if}
    <span class="td"></span>
    <span class="td"></span>
    <span class="td"></span>
  </div>
{/template}
