<html>
<head>
    <title>Administration</title>
    <meta name="decorator" content="atl.admin"/>
    <meta name="application-base-url" content="$applicationProperties.getBaseUrl()">
    $webResourceManager.requireResource("org.catrobat.confluence.timesheet:administration-resources")
</head>
<body>
<a name="top"></a>
<div id="aui-message-bar"></div>
<div class="loadingDiv"><span class="aui-icon aui-icon-wait">Loading...</span></div>
<div class="aui-tabs horizontal-tabs">
    <ul class="tabs-menu">
        <li class="menu-item active-tab">
            <a href="#tabs-general"><strong>General Configuration</strong></a>
        </li>
        <li class="menu-item">
            <a href="#tabs-permissions"><strong>Add/Remove Permissions</strong></a>
        </li>
        <li class="menu-item">
            <a href="#tabs-categories"><strong>Add/Remove Categories</strong></a>
        </li>
        <li class="menu-item">
            <a href="#tabs-teams"><strong>Add/Remove Teams</strong></a>
        </li>
    </ul>
    <div class="tabs-pane active-pane" id="tabs-general">
        <form id="general" class="aui">
            <!-- fake fields are a workaround for chrome autofill getting the wrong fields -->
            <input style="display:none" type="text" name="fakeusernameremembered"/>
            <input style="display:none" type="password" name="fakepasswordremembered"/>
            <h2>Permission</h2>
            <fieldset>
                <div class="field-group">
                    <label for="plugin-permission">Allowed Groups/Users</label>
                    <input class="text" type="text" id="plugin-permission" name="plugin-permission"
                           title="plugin-permission">

                    <div class="description">
                        <ul>
                            <li>If nothing is given, every Confluence Administrator may read/write</li>
                            <li>If a group is given, every Confluence Administrator within this group may read/write</li>
                            <li>If a single user is given and this user is a Confluence Administrator this user may read/write</li>
                        </ul>
                    </div>
                </div>
            </fieldset>

            <h2>General</h2>
            <fieldset>
                <div class="field-group">
                    <label for="userdirectory">Userdirectory</label>
                    <input class="text" type="text" id="userdirectory" name="userdirectory"
                           title="userdirectory">

                    <div class="description">
                        Adds user to given user directory.
                    </div>
                </div>
            </fieldset>

            <h2>Welcome E-Mail</h2>
            <fieldset>
                <div class="field-group">
                    <label for="mail-">From Name</label>
                    <input class="text" type="text" id="mail-from-name" name="mail-from-name"
                           title="mail-from-name">
                    <div class="description">
                        The name of the sender which is shown in the welcome mail.
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="field-group">
                    <label for="mail-from">From</label>
                    <input class="text" type="text" id="mail-from" name="mail-from"
                           title="mail-from">
                    <div class="description">
                        The e-mail address of the sender which is shown in the welcome mail.
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="field-group">
                    <label for="mail-subject">Subject</label>
                    <input class="text" type="text" id="mail-subject" name="mail-subject"
                           title="mail-subject">
                    <div class="description">
                        The subject of the mail.
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="field-group">
                    <label for="mail-body">Body</label>
                    <textarea name="mail-body" id="mail-body"></textarea>
                    <div class="description">
                        The actual text of the mail. Following strings will be replaced by Jira:
                        <ul>
                            <li><span class="mono">{{name}}</span>: The name of the new user</li>
                            <li><span class="mono">{{username}}</span>: The username of the new user</li>
                            <li><span class="mono">{{password}}</span>: The password for the new user</li>
                        </ul>
                    </div>
                </div>
            </fieldset>

            <h2>Available Teams</h2>
            <fieldset>
                <div class="field-group">
                    <label for="available-teams">Available Teams</label>
                    <input class="text" type="text" id="available-teams" name="available-teams"
                           title="available-teams">

                    <div class="description">
                        Shows available teams.
                    </div>
                </div>
            </fieldset>

            <h2>Available Categories</h2>
            <fieldset>
                <div class="field-group">
                    <label for="availabe-categories">Available Categories</label>
                    <input class="text" type="text" id="available-categories" name="available-categories"
                           title="available-categories">

                    <div class="description">
                        Shows available categories.
                    </div>
                </div>
            </fieldset>

            <h2>Permission Configuration</h2>

            <div id="teams"></div>
            <div class="field-group">
                <input type="submit" value="Save" class="aui-button aui-button-primary">
            </div>
        </form>
    </div>
    <div class="tabs-pane" id="tabs-permissions">
        <h2>Permission Groups</h2>
        <p>
            Removing a group just effects the configuration and no user will be modified.
        </p>
        <form id="modify-team-permissions" class="aui">
            <fieldset>
                <div class="field-group">
                    <label for="team-permission">Permission name<span class="aui-icon icon-required"> required</span></label>
                    <input class="text" type="text" id="team-permission" name="team-permission" title="team-permission">
                </div>
                <div class="field-group">
                    <input type="submit" value="Create" class="aui-button aui-button-primary">
                    <input type="submit" value="Remove" id="removePermission" class="aui-button">
                </div>
            </fieldset>
        </form>
    </div>
    <div class="tabs-pane" id="tabs-categories">
        <h2>Categories</h2>
        <p>
            Removing a category does not modify any user.
        </p>
        <form id="modify-categoryList" class="aui">
            <fieldset>
                <div class="field-group">
                    <label for="category-name">Category name<span class="aui-icon icon-required"> required</span></label>
                    <input class="text" type="text" id="category-name" name="category-name" title="category-name">
                </div>
                <div class="field-group">
                    <input type="submit" value="Create" class="aui-button aui-button-primary">
                    <input type="submit" value="Remove" id="removeCategory" class="aui-button">
                </div>
            </fieldset>
        </form>
    </div>

    <div class="tabs-pane" id="tabs-teams">
        <h2>Teams</h2>
        <p>
            Removing a team does not modify any users.
        </p>
        <form id="modify-teamList" class="aui">
            <fieldset>
                <div class="field-group">
                    <label for="team-name">Team name<span class="aui-icon icon-required"> required</span></label>
                    <input class="text" type="text" id="team-name" name="team-name" title="team-name">
                </div>
                <div class="field-group">
                    <input type="submit" value="Create" class="aui-button aui-button-primary">
                    <input type="submit" value="Remove" id="removeTeam" class="aui-button">
                </div>
            </fieldset>
        </form>
    </div>
</div>
</body>
</html>